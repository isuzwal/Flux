{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    
    "target": "ES2020",  
    "module": "es2020",
    "lib": ["ES2020"],   
    "types": ["node"], 
    
    "strict": true,
    "esModuleInterop": true,  
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", 
    "declaration": true,
    "sourceMap": true
  }
}